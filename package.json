{
	"name": "@lesomnus/io",
	"version": "0.1.0",
	"description": "Golang `io`-like I/O interfaces",
	"keywords": ["golang", "io"],
	"homepage": "https://github.com/lesomnus/io.ts",
	"license": "Apache-2.0",
	"author": {
		"name": "Seunghyun Hwang",
		"email": "lesomnus@gmail.com",
		"url": "https://lesomnus.github.io"
	},
	"type": "module",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"typings": "./dist/index.d.ts",
	"exports": {
		".": {
			"require": "./dist/main.cjs.js",
			"import": "./dist/main.js",
			"types": "./dist/index.d.ts"
		},
		"path": {
			"require": "./dist/path.cjs.js",
			"import": "./dist/path.js",
			"types": "./dist/path/index.d.ts"
		},
		"fs": {
			"require": "./dist/fs.cjs.js",
			"import": "./dist/fs.js",
			"types": "./dist/fs/index.d.ts"
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/lesomnus/io.ts.git"
	},
	"scripts": {
		"build": "tsc && vite build",
		"test": "vitest",
		"test:ui": "vitest --ui",
		"check": "biome check --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/express": "^4.17.21",
		"@types/node": "^20.14.11",
		"@vitest/coverage-istanbul": "^2.0.3",
		"@vitest/ui": "^2.0.3",
		"express": "^4.19.2",
		"jsdom": "^24.1.1",
		"tsx": "^4.16.2",
		"typescript": "^5.2.2",
		"vite": "^5.3.1",
		"vite-plugin-dts": "^3.9.1",
		"vite-tsconfig-paths": "^5.0.0",
		"vitest": "^2.0.3"
	}
}
